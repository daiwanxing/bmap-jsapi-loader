{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "skipLibCheck": true,
        "allowJs": false,
        "baseUrl": ".",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "typeRoots": ["src/types"]
    },
    "include": ["src/**/*", "rollup.config.ts"],
    "exclude": [
        "node_modules"
    ]
}