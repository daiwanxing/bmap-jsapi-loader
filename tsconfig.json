{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES6",
        "strict": true,
        "skipLibCheck": true,
        "allowJs": false,
        "baseUrl": ".",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "declaration": true,
        "declarationDir": "./",
        "lib": ["ESNext", "DOM"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
